[MASTER]
# Ignore node_modules and other non-source directories
ignore=node_modules,venv,.venv,build,dist,.git

[MESSAGES CONTROL]
# Disable specific warnings that are unavoidable or less critical
disable=
    # Import errors when running pylint without proper PYTHONPATH
    import-error,
    # Wrong import position (after sys.path.insert in tests)
    wrong-import-position,
    # Too many arguments/locals/return statements (sometimes necessary for complex logic)
    too-many-arguments,
    too-many-positional-arguments,
    too-many-locals,
    too-many-return-statements,
    # Broad exception catching (necessary for robustness in production code)
    broad-exception-caught,
    broad-exception-raised,
    # Unused arguments in test fixtures are expected
    unused-argument,
    # Protected member access in tests is acceptable
    protected-access,
    # Module naming (AudioProcessor is standard in the codebase)
    invalid-name

[FORMAT]
# Maximum line length
max-line-length=100

# Allow continuation lines to exceed the line length
ignore-long-lines=^\s*(# )?<?https?://\S+>?$

[DESIGN]
# Increase some thresholds to be more lenient
max-args=6
max-locals=16
max-returns=7
max-branches=15
max-statements=60

[BASIC]
# Allow short variable names in specific contexts
good-names=i,j,k,ex,Run,_,e,f,db,id,exc

[SIMILARITIES]
# Minimum lines number of a similarity block
min-similarity-lines=6
